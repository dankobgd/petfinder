{
  "name": "petfinder-server",
  "version": "1.0.0",
  "title": "Petfinder App",
  "description": "Find and adopt your favourite animal buddy",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "knex:migrate:make": "knex --knexfile db/knexfile.js migrate:make",
    "knex:migrate:latest": "knex --knexfile db/knexfile.js migrate:latest",
    "knex:migrate:rollback": "knex --knexfile db/knexfile.js migrate:rollback",
    "knex:seed:make": "knex --knexfile db/knexfile.js seed:make",
    "knex:seed:run": "knex --knexfile db/knexfile.js seed:run"
  },
  "keywords": [],
  "author": "Danko Petrovic <dankopetrovic.bgd@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "@sendgrid/mail": "^6.4.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "html-to-text": "^5.1.1",
    "http-errors": "^1.7.2",
    "jsonwebtoken": "^8.5.1",
    "juice": "^5.2.0",
    "knex": "^0.17.3",
    "lodash": "^4.17.11",
    "mailgun-js": "^0.22.0",
    "morgan": "^1.9.1",
    "nodemailer": "^6.2.1",
    "nunjucks": "^3.2.0",
    "sqlite3": "^4.0.8",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.9.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1"
  }
}
