{
  "extends": ["airbnb-base", "prettier"],
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "camelcase": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "func-names": 0,
    "comma-dangle": 0,
    "max-len": 0,
    "no-use-before-define": 0,
    "arrow-body-style": [2, "as-needed"],
    "no-unused-expressions": [
      2,
      {
        "allowTaggedTemplates": true
      }
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "prettier/prettier": [
      "warn",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  }
}
